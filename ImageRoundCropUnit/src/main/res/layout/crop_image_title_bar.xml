<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="46dp"
    android:background="@color/app_theme_style_color"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/titleBarLeft"
        android:layout_width="100dp"
        android:layout_height="46dp"
        android:clickable="true"
        android:visibility="visible">

        <ImageView
            android:id="@+id/backBtn"
            android:layout_width="42dp"
            android:layout_height="46dp"
            android:background="@color/app_theme_style_color"
            android:focusable="true"
            android:paddingBottom="12dp"
            android:paddingTop="12dp"
            android:src="@drawable/back_icon"
            android:visibility="visible" />

        <TextView
            android:id="@+id/backTv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="返回"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:visibility="visible" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/rightLayout"
        android:layout_width="100dp"
        android:layout_height="46dp"
        android:layout_alignParentEnd="true"
        android:gravity="right|end|center"
        android:visibility="visible">

        <TextView
            android:id="@+id/completeTv"
            android:layout_width="wrap_content"
            android:layout_height="46dp"
            android:background="@color/app_theme_style_color"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:padding="10dp"
            android:text="完 成"
            android:textColor="#ffffff"
            android:textSize="14sp"
            android:visibility="visible" />
    </LinearLayout>

    <TextView
        android:id="@+id/titleBarTxt"
        android:layout_width="wrap_content"
        android:layout_height="46dp"
        android:layout_centerInParent="true"
        android:layout_toEndOf="@id/titleBarLeft"
        android:layout_toStartOf="@id/rightLayout"
        android:ellipsize="middle"
        android:gravity="center"
        android:singleLine="true"
        android:text="剪切图片"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:visibility="visible" />
</RelativeLayout>



